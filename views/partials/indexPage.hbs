  <div id="main">
      <div class="divLeftContent">
          <a href="/"><img id="titlePic" src="./img/knowledgeBase.png" /></a>
          <img id="signupPic" src="./img/signupPic.png" />
      </div>
      <div class="divRightContent">
          <div class="loginContentDiv">
              <form  method="POST" action="login">
                <input id="loginEmail" maxlength="16" type="email" name="email" placeholder="email" required/>
                <input id="loginPassword" type="text" name="password" placeholder="password"/>
                <button id="loginButton" onclick="" type="submit">login</button>
              </form>
          </div>
          <div class="textRight">
              Join the worlds largest community for Knowledge sharing
          </div>
          <div class="signupContentDiv">
              <form class="signupForm" method="POST" action="signup">
                  <input id="firstName" type="text" name="firstName" maxlength="16" placeholder="firstname" required/>
                  <input id="lastName" type="text" name="lastName" maxlength="16" placeholder="lastname" required/>
                  <input id="signupEmail" type="email" name="email" maxlength="16"placeholder="email" required/>
                  <input id="signupPassword" type="text" name="password" minlength="4" maxlength="16" placeholder="password" required/>
                  <input id="signupPasswordConfirm" type="text" name="password" minlength="4" maxlength="16" placeholder="confirm password" required/>
                  <button id="signup" onclick="" type="submit">signup</button>
              </form>
          </div>
      </div>
  </div>